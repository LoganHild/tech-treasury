
<article>
  <a href="/dashboard" class="is-pulled-right">Back To Dashboard</a>
  <h2 class="title">Edit Post</h2><hr>
  <div class="writepost">
    <div>
      <label for="title">Title:</label>
      <input class="input" id="title" name="title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <label for="text">Text:</label>
      <input class="textarea" id="text" name="text" type="text" value="{{post.text}}" />
    </div>
    <div class="is-pulled-right">
       Post {{format_date post.date_created}}
    
      <a href="/post/{{post.id}}"></a>
    </div>
    <button type="submit" class="button">Save</button>
    <button type="submit" class="button delete-btn">Delete</button>
  </div>
</article>

<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.name}} on {{format_date date_created}}
    </div>
    <div class="text">
      {{comment}}
    </div>
  </section>
  {{/each}}
</div>


<script src="/js/deletepost.js"></script>
<script src="/js/editpost.js"></script>

